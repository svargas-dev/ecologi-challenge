{
  "$schema": "https://json.schemastore.org/prettierrc",
  "arrowParens": "always",
  "semi": true,
  "trailingComma": "es5",
  "tabWidth": 2,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "printWidth": 120,
  "overrides": [
    {
      "files": ["*.js", "*.ts", "*.tsx", "*.css"],
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": "*.html",
      "options": {
        "tabWidth": 4,
        "singleQuote": false
      }
    }
  ]
}
